    name = "playwright_js",
    srcs = glob(["src/**/*.ts"]),
    allow_js = True,
    declaration = False,
    source_map = True,
    out_dir = "build",
    tsconfig = ":tsconfig",
    deps = [
        "//:node_modules/typescript",
        ":node_modules/@types/node",
        ":node_modules/ts-node",
        ":node_modules/@cucumber/cucumber",
        ":node_modules/@playwright/test",
