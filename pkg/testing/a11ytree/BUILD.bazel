load("@npm//:defs.bzl", "npm_link_all_packages")
load("//:bazel/vite/vite.bzl", "vite_build")
load("@npm//pkg/testing/a11ytree:vite/package_json.bzl", vite_bin = "bin")
load("@aspect_rules_js//npm:defs.bzl", "npm_package")

npm_link_all_packages(name = "node_modules")

vite_build(
    name = "a11ytree_dist",
    out = ["dist"],
    outDir = "./pkg/testing/a11ytree/dist", # TODO: WHY is vite build executed on root cwd?!?!?!
    config_path = "$(execpath :vite.config.ts)",
    data = glob([
        "src/**/*.ts",
    ]) + [
        "package.json",
        ":vite.config.ts",
        ":node_modules/vite",
        ":node_modules/vite-plugin-dts",
        ":node_modules/@types/node",
    ],
    root = package_name(),
    vite_bin = vite_bin,
)

npm_package(
    name = "a11ytree",
    srcs = [
        "package.json",
        ":a11ytree_dist",
    ],
    visibility = ["//visibility:public"],
)
