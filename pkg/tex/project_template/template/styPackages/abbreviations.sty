\NeedsTeXFormat{LaTeX2e}

\ProvidesPackage{styPackages/abbreviations}

% Read the abbreviations and the original meaning from a csv file
\usepackage[utf8]{datatool}
\usepackage[utf8]{inputenc}

\DTLsetseparator{;}

\DTLloaddb{abbreviations}{abbreviations.csv}

\newcommand{\listabbreviationname}{List of abbreviations}

\newcommand{\printabbreviations}[0]
{
	\begin{center}
		\begin{LARGE}
			\listabbreviationname
		\end{LARGE}
	\end{center}
	\DTLforeach*{abbreviations}
	{\abbr=abbr,\orig=orig}
	{
		\par\noindent\abbr\dotfill\orig
	}
}

\endinput